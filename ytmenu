VERSION="1.4.1"

YOUTUBE_URL="https://youtube.com"
INVIDIOUS_URL="https://vid.puffyan.us"

menu() {
	printf "1. Download a video\n"
	printf "2. Search web\n"
	printf "3. Update script\n"
}

die() {
	printf "$*"
	exit 1
}

input() {
	printf "Search YouTube: " ; read query
}

update_script() {
	#Get the newest version of the script
	update="$(curl -sL "https://raw.githubusercontent.com/DemonKingSwarn/ytmenu/main/ytmenu" | diff -u "$0" -)"
	if [ -z "$update" ]; then
		printf "Script is up to date :)\n"
	else
		if printf '%s\n' "$update" | patch "$0" - ; then
			printf "Script has been updated\n"
		else
			printf "Can't update for some reason!\n"
		fi
	fi
}

dep_ch() {
	for dep; do
		if ! command -v "$dep" > /dev/null ; then
			printf "Program \"$dep\" not found. Please install it.\n"
			[ "$dep" = "yt-dlp" ] && printf "To install yt-dlp, Type pip install yt-dlp"
			die
		fi
	done
}

search() {
	input
	search=$(echo "${query}" | tr ' ' '+')
	url="$YOUTUBE_URL/$(curl -s "$INVIDIOUS_URL/search?q=$search" | grep -Eo "watch\?v=.{11}" | head -n 1)"
	mpv "$url"
}

download() {
	input
	search=$(echo "${query}" | tr ' ' '+')
	url="$YOUTUBE_URL/$(curl -s "$INVIDIOUS_URL/search?q=$search" | grep -Eo "watch\?v=.{11}" | head -n 1)"
	yt-dlp "$url"
}

choice=$(menu | fzf | cut -d. -f1) || exit

case $choice in
	1)
		download
		;;
	2)
		search
		;;
	3)
		update_script
		;;
	*)
		echo "Program terminated" && exit 0
		;;
esac

# Checks for the main dependencies
dep_ch "sed" "curl" "grep" "git" "yt-dlp" "mpv" "fzf"
